<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@drawable/borda"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/foto_produto"
        android:src="@drawable/ex_produto"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Dead redemption 2"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/nome_produto"
            />

        <TextView
            android:id="@+id/valor_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por: R$50,00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#0d6c0b"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/detalhes_link"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CLIQUE PARA MAIS DETALHES"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#0d6c0b"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>



</LinearLayout>