<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SobreNosActivity"
    tools:showIn="@layout/activity_sobre_nos"
    android:background="#3d403d">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#740808"
                android:text="SOBRE NÓS"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASDOHASUIDHSAD"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:id="@+id/sobrenos"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#740808"
                android:text="NOSSO PROPÓSITO"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASDOHASUIDHSAD"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:id="@+id/nossoproposito"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#740808"
                android:text="CONTATO"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tel"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_em"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11) 4611-4493"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/telEmpr"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="williamtristao@hotmail.com"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:id="@+id/emailEmpr"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>